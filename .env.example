# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/deeplearning

# Option 2: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/deeplearning?retryWrites=true&w=majority

# Database
DB_NAME=deeplearning
DB_HOST=localhost
DB_PORT=27017

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Model Configuration
DEFAULT_INPUT_SHAPE=[64,64,1]
DEFAULT_NUM_CLASSES=10

# Training Configuration
DEFAULT_EPOCHS=10
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=0.001

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

KAGGLE_USERNAME=
KAGGLE_KEY=
